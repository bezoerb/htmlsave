{
  "name": "htmlsave",
  "version": "2.0.0",
  "description": "HTML save string utilities ",
  "main": "lib/htmlsave.js",
  "scripts": {
    "clean": "rimraf lib dist es coverage",
    "format": "prettier --write \"{src,test}/**/*.{js,ts}\" \"**/*.md\"",
    "lint": "xo --fix",
    "test": "jasmine --config=./test/jasmine.json",
    "pretest": "npm run build",
    "test:cov": "nyc npm test && nyc report --reporter=lcov",
    "build": "rollup -c",
    "prepare": "npm run clean && npm run lint && npm test",
    "browserstack": "npx browserstack-runner",
    "coveralls": "nyc report --reporter=text-lcov | coveralls"
  },
  "files": [
    "dist",
    "lib",
    "es",
    "src"
  ],
  "engines": {
    "node": ">=10"
  },
  "unpkg": "dist/htmlsave.js",
  "module": "es/htmlsave.js",
  "browser": "dist/htmlsave.js",
  "repository": {
    "type": "git",
    "url": "git@github.com:bezoerb/htmlsave.git"
  },
  "keywords": [
    "javascript",
    "split",
    "truncate",
    "htmlsave"
  ],
  "author": {
    "name": "Ben ZÃ¶rb",
    "email": "ben@sommerlaune.com"
  },
  "license": "MIT",
  "licenses": [
    {
      "type": "MIT",
      "url": "bezoerb.mit-license.org"
    }
  ],
  "bugs": {
    "url": "https://github.com/bezoerb/htmlsave/issues"
  },
  "jam": {
    "dependencies": {},
    "main": "dist/htmlsave.js"
  },
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.9.6",
    "@babel/node": "^7.8.7",
    "@babel/plugin-external-helpers": "^7.8.3",
    "@babel/plugin-proposal-object-rest-spread": "^7.9.6",
    "@babel/plugin-transform-runtime": "^7.9.6",
    "@babel/preset-env": "^7.9.6",
    "@babel/register": "^7.9.0",
    "babel-core": "^7.0.0-bridge.0",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^26.0.1",
    "browserstack-runner": "git://github.com:bezoerb/browserstack-runner.git#bump-yargs",
    "core-js": "^3.6.5",
    "coveralls": "^3.1.0",
    "htmlhint": "^0.12.0",
    "jasmine": "^3.5.0",
    "jsdom": "^16.2.2",
    "nyc": "^15.0.1",
    "prettier": "^2.0.5",
    "regenerator-runtime": "^0.13.5",
    "rimraf": "^3.0.2",
    "rollup": "^2.10.2",
    "rollup-plugin-babel": "^4.4.0",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-replace": "^2.2.0",
    "rollup-plugin-terser": "^5.3.0",
    "xo": "^0.30.0"
  },
  "prettier": {
    "trailingComma": "es5",
    "singleQuote": true,
    "printWidth": 120,
    "bracketSpacing": false
  },
  "xo": {
    "space": 2,
    "prettier": true,
    "ignores": [
      "dist",
      "es",
      "lib",
      "rollup.config.js",
      "test"
    ],
    "rules": {
      "prefer-destructuring": 0,
      "no-new-object": 0,
      "valid-jsdoc": 0,
      "import/no-unresolved": 0,
      "import/no-unassigned-import": 0,
      "unicorn/prefer-string-slice": 0,
      "unicorn/no-for-loop": 0,
      "unicorn/prefer-includes": 0
    }
  },
  "npmName": "htmlsave",
  "npmFileMap": [
    {
      "basePath": "/dist/",
      "files": [
        "*.js"
      ]
    }
  ],
  "jest": {
    "testEnvironment": "./test/helpers/environment.js",
    "transform": {
      "^.+\\.(js|jsx)?$": "babel-jest"
    }
  }
}
