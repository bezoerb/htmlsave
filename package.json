{
  "name": "htmlsave",
  "version": "0.0.12",
  "description": "HTML save string utilities ",
  "main": "dist/htmlsave.js",
  "scripts": {
    "test": "xo && nyc ava",
    "compile": "browserify src/htmlsave.js -s htmlsave -t babelify --outfile dist/htmlsave.js && uglifyjs dist/htmlsave.js -o dist/htmlsave.min.js",
    "prepublish": "npm run compile"
    "coveralls": "nyc report --reporter=text-lcov | coveralls"
  },
  "files": [
    "dist/htmlsave.js",
    "dist/htmlsave.min.js"
  ],
  "repository": {
    "type": "git",
    "url": "git@github.com:bezoerb/htmlsave.git"
  },
  "keywords": [
    "javascript",
    "split",
    "truncate",
    "htmlsave"
  ],
  "author": {
    "name": "Ben ZÃ¶rb",
    "email": "ben@sommerlaune.com"
  },
  "license": "MIT",
  "licenses": [
    {
      "type": "MIT",
      "url": "bezoerb.mit-license.org"
    }
  ],
  "bugs": {
    "url": "https://github.com/bezoerb/htmlsave/issues"
  },
  "jam": {
    "dependencies": {},
    "main": "dist/htmlsave.js"
  },
  "devDependencies": {
    "ava": "^0.14.0",
    "babel-core": "^6.7.4",
    "babel-plugin-transform-es2015-modules-umd": "^6.6.5",
    "babel-polyfill": "^6.9.0",
    "babel-preset-es2015": "^6.6.0",
    "babelify": "^7.2.0",
    "browserify": "^13.0.0",
    "coveralls": "^2.11.9",
    "htmlhint": "^0.9.6",
    "nyc": "^6.1.1",
    "object-assign": "^4.1.0",
    "rollupify": "^0.3.1",
    "uglify-js": "^2.6.2",
    "xo": "^0.13.0"
  },
  "xo": {
    "space": 4,
    "ignores": [
      "dist/measure-text.js",
      "dist/measure-text.min.js",
      "test.old/**/*.js",
      "Gruntfile.js",
      "test.js"
    ]
  },
  "ava": {
    "files": [
      "test/*.js"
    ]
  },
  "babel": {
    "presets": [
      "es2015"
    ],
    "plugins": [
      "transform-es2015-modules-umd"
    ]
  }
}
